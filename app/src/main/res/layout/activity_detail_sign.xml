<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.learn.DetailSignActivity">

    <ImageView
        android:id="@+id/imgSignDetail"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:src="@drawable/logo_sibisa"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Sign Image Detail" />

    <TextView
        android:id="@+id/signTitleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_title"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="48sp"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/imgSignDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>